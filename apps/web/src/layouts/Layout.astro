---
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import CommonHead from "../components/common-head.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <CommonHead title={title ?? SITE_TITLE} description={SITE_DESCRIPTION} />

  <body>
    <slot />
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
        padding-top: 70px;
        color: #fff;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      body::-webkit-scrollbar {
        width: 5px; /* width of the entire scrollbar */
      }

      body::-webkit-scrollbar-track {
        background: #13151a; /* color of the tracking area */
      }

      body::-webkit-scrollbar-thumb {
        background-color: #373a40; /* color of the scroll thumb */
        border-radius: 1px; /* roundness of the scroll thumb */
      }
    </style>
  </body>
</html>
